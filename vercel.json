{
  "functions": {
    "api/**/*": {
      "runtime": "vercel-php@0.7.2"
    }
  },
  "routes": [
    {
      "src": "/(css|js)/(.*)$",
      "dest": "/api/assets.php?type=$1&file=$2"
    },
    {
      "src": "/languages/(.*)$",
      "dest": "/api/languages.php?lang=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}
