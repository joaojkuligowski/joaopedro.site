{
  "functions": {
    "api/**/*": {
      "runtime": "vercel-php@0.7.2"
    }
  },
  "routes": [
    {
      "src": "(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "scripts.min.js",
      "dest": "/api/scripts.min.js"
    },
    {
      "src": "styles.min.css",
      "dest": "/api/styles.min.css"
    },
    {
      "src": "lang/(.*)",
      "dest": "/api/lang/"
    }
  ]
}
