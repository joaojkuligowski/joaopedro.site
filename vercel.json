{
  "functions": {
    "api/**/*": {
      "runtime": "vercel-php@0.7.2"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "/api/scripts.min.js",
      "dest": "/api/scripts.min.js"
    },
    {
      "src": "/api/styles.min.css",
      "dest": "/api/styles.min.css"
    },
    {
      "src": "/api/lang/(.*)",
      "dest": "/api/lang/"
    }
  ]
}
